<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemFragment">

    <ImageButton
        android:id="@+id/imageButton_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/trash_35" />


    <TextView
        android:id="@+id/textView_taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Task Name" />

    <EditText
        android:id="@+id/editText_taskName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_taskName"
        android:layout_toRightOf="@+id/textView_taskName" />

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_taskName"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"></DatePicker>

    <TextView
        android:id="@+id/textView_priority"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_picker"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Priority" />


    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_priority"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/button_low"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/color_change_b"
            android:button="@null"
            android:text="Low" />

        <RadioButton
            android:id="@+id/button_med"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/color_change_b"
            android:button="@null"
            android:text="Medium" />

        <RadioButton
            android:id="@+id/button_high"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/color_change_b"
            android:button="@null"
            android:text="high" />

        <RadioButton
            android:id="@+id/button_urgent"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/color_change_b"
            android:button="@null"
            android:text="urgent" />

    </RadioGroup>

    <ImageButton
        android:id="@+id/button_addItem"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView_priority"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_send_black_24dp"
        android:text="submit" />


</RelativeLayout>
